journal = {Circ. Arrhythmia Electrophysiol.},
shorttitle = {Stimulating Cardiac Muscle by Light},
title = {{Stimulating Cardiac Muscle by Light: Cardiac Optogenetics by Cell Delivery}},
url = {http://circep.ahajournals.org/content/early/2011/08/09/CIRCEP.111.964247.abstract},
year = {2011}
}


