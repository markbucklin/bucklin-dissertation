keywords = {Java,Matlab,Octave,Python,complex networks,complex systems,information storage,information theory,information transfer,transfer entropy},
language = {English},
pmid = {25246431},
shorttitle = {JIDT},
title = {{JIDT: An information-theoretic toolkit for studying the dynamics of complex systems}},
url = {http://arxiv.org/abs/1408.3270%0Ahttp://dx.doi.org/10.3389/frobt.2014.00011},
