number = {3},
pages = {477--488},
pmid = {23179855},
title = {{The spatial pattern of light determines the kinetics and modulates backpropagation of optogenetic action potentials}},
url = {http://link.springer.com/article/10.1007%2Fs10827-012-0431-7},
urldate = {2013-05-02},
