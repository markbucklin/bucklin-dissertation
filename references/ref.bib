month = {nov},
number = {1},
pages = {9--20},
pmid = {11640953},
title = {{The use of titanium implants and prosthodontic techniques in the preparation of non-human primates for long-term neuronal recording studies}},
url = {http://www.sciencedirect.com/science/article/pii/S0165027001004423},
volume = {112},
