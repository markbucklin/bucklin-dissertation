isbn = {1662-5137 (Electronic)\n1662-5137 (Linking)},
issn = {1662-5137},
journal = {Front. Syst. Neurosci.},
keywords = {Non-human primate,archaerhodopsin,channelrhodopsin,halorhodopsin,neural silencing,neurophysiology,optogenetics,systems neuroscience},
pages = {18},
pmid = {21811444},
shorttitle = {A high-light sensitivity optical neural silencer},
title = {{A High-Light Sensitivity Optical Neural Silencer: Development and Application to Optogenetic Control of Non-Human Primate Cortex}},
