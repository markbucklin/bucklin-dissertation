title = {{A wirelessly powered and controlled device for optical neural control of freely-behaving animals}},
url = {http://stacks.iop.org/1741-2552/8/i=4/a=046021?key=crossref.da0e40a84aac2e9213eb95a3f664eece http://iopscience.iop.org/1741-2552/8/4/046021 http://syntheticneurobiology.org/publications/publicationdetail/141/25},
