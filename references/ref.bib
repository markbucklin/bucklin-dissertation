eprint = {NIHMS150003},
isbn = {1469-7610},
issn = {00219630},
journal = {J. Child Psychol. Psychiatry},
number = {11},
pages = {1188--1197},
pmid = {20633070},
title = {{Feeling, caring, knowing: different types of empathy deficit in boys with psychopathic tendencies and autism spectrum disorder}},
url = {http://doi.wiley.com/10.1111/j.1469-7610.2010.02280.x},
volume = {51},
year = {2010}
