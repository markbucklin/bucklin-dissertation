keywords = {Computer Science - Multimedia,Computer Science - Networking and Internet Archite,Video streaming,adaptive bit rate streaming,bandwidth prediction,combinatorial optimization,scalable video coding},
number = {4},
pages = {1633--1645},
shorttitle = {LBP},
title = {{LBP: Robust Rate Adaptation Algorithm for SVC Video Streaming}},
