journal = {Ann. N. Y. Acad. Sci.},
keywords = {Computational analysis,Deep brain stimulation,Depression,Epilepsy,Mood disorders,Movement disorders,Neuromodulation,computational analysis,deep brain stimulation,epilepsy,mood disorders,movement disorders,neuromodulation},
language = {en},
number = {1},
pages = {204--211},
pmid = {20633127},
title = {{Neuromodulation: Advances in the next five years}},
url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1749-6632.2009.05379.x/abstract},
volume = {1199},
