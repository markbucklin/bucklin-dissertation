isbn = {0003-6935 (Print)\r0003-6935 (Linking)},
issn = {0003-6935},
journal = {Appl. Opt.},
keywords = {Light propagation in tissues,Multiple scattering,Photon migration,Spectroscopy,Turbid media,tissue diagnostics},
number = {22},
pages = {4939},
pmid = {18323984},
shorttitle = {In {Vivo} {Local} {Determination} of {Tissue} {Opt}},
title = {{In vivo local determination of tissue optical properties: applications to human brain}},
url = {https://www.osapublishing.org/abstract.cfm?URI=ao-38-22-4939},
volume = {38},
