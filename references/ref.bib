author = {Maltsev, Alexander V. and Parsons, Sean P. and Kim, Mary S. and Tsutsui, Kenta and Stern, Michael D. and Lakatta, Edward G. and Maltsev, Victor A. and Monfredi, Oliver},
doi = {10.1371/journal.pone.0179419},
issn = {19326203},
journal = {PLoS One},
keywords = {Action Potentials,Algorithms,Animals,Calcium,Calcium Channels- L-Type,Calcium Signaling,Guinea Pigs,Heart Rate,Ion Transport,Myocytes- Cardiac,Rabbits,Ryanodine Receptor Calcium Release Channel,Sarcoplasmic Reticulum,Sinoatrial Node,Sodium-Calcium Exchanger,Software,Tissue Culture Techniques},
language = {eng},
number = {7},
pages = {e0179419},
title = {{Computer algorithms for automated detection and analysis of local Ca2+releases in spontaneously beating cardiac pacemaker cells}},
